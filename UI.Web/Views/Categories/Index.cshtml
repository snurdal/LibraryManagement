<!-- Categories/Index.cshtml -->
@model UI.Web.Models.Category.CategoryListViewModel
@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Categories</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tags me-2"></i>Categories</h2>
        <a href="/Categories/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Category
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model?.Categories != null && Model.Categories.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Book Count</th>
                                        <th scope="col">Created Date</th>
                                        <th scope="col" width="150">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <th scope="row">@index</th>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="category-circle me-3">
                                                        <i class="fas fa-tag"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@category.Name</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@category.BookCount Books</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @category.CreateDate.ToString("dd MMM yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/Categories/Details/@category.Id" class="btn btn-outline-primary btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/Categories/Edit/@category.Id" class="btn btn-outline-success btn-sm" title="Edit Category">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" title="Delete"
                                                            onclick="deleteCategory(@category.Id, '@category.Name', @category.BookCount)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-5x text-muted mb-4"></i>
                            <h4 class="text-muted">No Categories Found</h4>
                            <p class="text-muted mb-4">No categories available in the library.</p>
                            <a href="/Categories/Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create First Category
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <p class="mb-2">Are you sure you want to delete this category?</p>
                    <h6 class="text-dark" id="categoryName"></h6>
                </div>
                <div class="alert alert-warning border-0" id="warningAlert">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle me-3 text-warning mt-1"></i>
                        <div>
                            <strong>Warning:</strong> This action cannot be undone. <span id="bookCountWarning"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Category
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .category-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 16px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn-group .btn {
        margin-right: 2px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }

    /* Alert Auto-hide Animation */
    .alert {
        border: none;
        border-radius: 10px;
    }

    /* Modal Enhancements */
    .modal-content {
        border: none;
        border-radius: 15px;
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.175);
    }

    .modal-header {
        padding: 1.5rem 1.5rem 0;
    }

    .modal-body {
        padding: 1rem 1.5rem;
    }

    .modal-footer {
        padding: 0 1.5rem 1.5rem;
    }
</style>

@section Scripts {
    <script>
        function deleteCategory(categoryId, categoryName, bookCount) {
            document.getElementById('categoryName').textContent = categoryName;
            document.getElementById('deleteForm').action = '/Categories/Delete/' + categoryId;

            // Update warning message based on book count
            const warningText = bookCount > 0
                ? `This category contains ${bookCount} book(s). Books will remain but without category reference.`
                : 'This category has no books associated with it.';
            document.getElementById('bookCountWarning').textContent = warningText;

            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}