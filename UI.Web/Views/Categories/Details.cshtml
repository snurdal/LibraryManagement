<!-- Categories/Details.cshtml -->
@model UI.Web.Models.Category.CategoryDetailViewModel
@{
    ViewData["Title"] = "Category Details - " + Model.Category.Name;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
            <li class="breadcrumb-item"><a href="/Categories/Index">Categories</a></li>
            <li class="breadcrumb-item active">@Model.Category.Name</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="category-circle-large me-3">
                <i class="fas fa-tag"></i>
            </div>
            <div>
                <h2 class="mb-1">@Model.Category.Name</h2>
                <small class="text-muted">Category Details</small>
            </div>
        </div>
        <div class="btn-group">
            <a href="/Categories/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Categories
            </a>
            <button class="btn btn-outline-danger" onclick="deleteCategory(@Model.Category.Id, '@Model.Category.Name', @Model.Category.Books.Count)">
                <i class="fas fa-trash me-2"></i>Delete
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Category Information Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Category Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="category-info">
                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Category Name:</label>
                            <div class="info-value">@Model.Category.Name</div>
                        </div>
                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Created Date:</label>
                            <div class="info-value">@Model.Category.CreateDate.ToString("dd MMMM yyyy, HH:mm")</div>
                        </div>
                        <div class="info-item">
                            <label class="fw-bold text-muted">Total Books:</label>
                            <div class="info-value">
                                <span class="badge bg-info fs-6">@Model.Category.Books.Count Books</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Books in This Category -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-books me-2"></i>Books in This Category
                    </h5>
                    <span class="badge bg-secondary">@Model.Category.Books.Count book(s)</span>
                </div>
                <div class="card-body">
                    @if (Model.Category.Books != null && Model.Category.Books.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Book Title</th>
                                        <th scope="col">Author</th>
                                        <th scope="col">ISBN</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var book in Model.Category.Books)
                                    {
                                        <tr>
                                            <th scope="row">@index</th>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="book-icon me-3">
                                                        <i class="fas fa-book"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@book.Title</strong>
                                                        @if (!string.IsNullOrEmpty(book.ShortDescription))
                                                        {
                                                            <br>

                                                            <small class="text-muted">@(book.ShortDescription.Length > 50 ? book.ShortDescription.Substring(0, 50) + "..." : book.ShortDescription)</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(book.AuthorFullName))
                                                {
                                                    <span class="text-primary">@book.AuthorFullName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown Author</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Books/Details/@book.Id" class="btn btn-outline-primary btn-sm" title="View Book Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No Books in This Category</h5>
                            <p class="text-muted mb-3">This category doesn't have any books assigned yet.</p>
                            <a href="/Books/Index" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Browse Books
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <p class="mb-2">Are you sure you want to delete this category?</p>
                    <h6 class="text-dark" id="categoryName"></h6>
                </div>
                <div class="alert alert-warning border-0">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle me-3 text-warning mt-1"></i>
                        <div>
                            <strong>Warning:</strong> This action cannot be undone. <span id="bookCountWarning"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Category
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .category-circle-large {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
    }

    .book-icon {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
    }

    .info-item {
        padding: 8px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .info-value {
        margin-top: 4px;
        font-size: 1rem;
    }

    .category-info {
        padding: 10px 0;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .alert {
        border: none;
        border-radius: 10px;
    }

    .modal-content {
        border: none;
        border-radius: 15px;
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.175);
    }

    .modal-header {
        padding: 1.5rem 1.5rem 0;
    }

    .modal-body {
        padding: 1rem 1.5rem;
    }

    .modal-footer {
        padding: 0 1.5rem 1.5rem;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>

@section Scripts {
    <script>
        function deleteCategory(categoryId, categoryName, bookCount) {
            document.getElementById('categoryName').textContent = categoryName;
            document.getElementById('deleteForm').action = '/Categories/Delete/' + categoryId;

            // Update warning message based on book count
            const warningText = bookCount > 0
                ? `This category contains ${bookCount} book(s). Books will remain but without category reference.`
                : 'This category has no books associated with it.';
            document.getElementById('bookCountWarning').textContent = warningText;

            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}